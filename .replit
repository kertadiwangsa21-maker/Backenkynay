run = "npm run dev"
entrypoint = "main.js"

hidden = [".config", ".gitignore"]
modules = ["nodejs-22"]

[nix]
channel = "stable-24_11"
packages = ["unzip"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]

[deployment]
deploymentTarget = "static"
build = ["npm", "run", "build"]
publicDir = "dist"

[[ports]]
localPort = 3250

[[ports]]
localPort = 5173
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Dev Server"

[[workflows.workflow]]
name = "Frontend Dev Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
